<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dialog_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margins_edit"
            android:layout_marginRight="@dimen/margins_edit"
            android:layout_marginTop="@dimen/margins_edit">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margins_edit"
                android:layout_marginRight="@dimen/margins_edit"
                android:layout_marginTop="@dimen/margins_edit" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dialog_task_date"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_task_title"
            android:layout_marginLeft="@dimen/margins_edit"
            android:layout_marginRight="@dimen/margins_edit"
            android:layout_marginTop="@dimen/margins_edit">

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="none" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dialog_task_time"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_task_title"
            android:layout_alignRight="@id/dialog_task_title"
            android:layout_marginTop="@dimen/margins_edit">

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:inputType="none" />
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</ScrollView>